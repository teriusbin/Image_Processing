<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_realtime"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <SlidingDrawer
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:topOffset="200dip" >

        <ImageView
            android:id="@id/handle"
            android:layout_width="88dip"
            android:layout_height="44dip"
            android:src="@drawable/point" />

        <LinearLayout
            android:id="@id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#44000000"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/algo1_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Algorithm1"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/algo1_para1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="parameter1"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/algo1_para1_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/algo1_seekbar1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/algo1_para2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="parameter2"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/algo1_para2_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="parameter2"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/algo1_seekbar2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50" />

            <TextView
                android:id="@+id/algo2_setting"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Algorithm2"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/algo2_para1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="parameter1"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/algo2_para1_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="parameter1"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/algo2_seekbar1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/algo2_para2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="parameter2"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/algo2_para2_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="parameter2"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/algo2_seekbar2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50" />
        </LinearLayout>
    </SlidingDrawer>

</FrameLayout>