<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#54545454"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_imageload"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="ImageLoad"
                android:textSize="7sp" />

            <Button
                android:id="@+id/btn_result"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Processing Result"
                android:textSize="7sp" />

            <Button
                android:id="@+id/btn_setting"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Algorithm Setting"
                android:textSize="7sp" />

            <Button
                android:id="@+id/btn_realtime_setting"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Realtime View"
                android:textSize="7sp" />

            <Button
                android:id="@+id/btn_viewmode"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="View Mode"
                android:textSize="7sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fragment_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" />
    </LinearLayout>

</LinearLayout>